{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "required": [
    "repo",
    "chart"
  ],
  "properties": {
    "repo": {
      "properties": {
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "chart": {
      "type": "string",
      "pattern": "^.+:.+$"
    },
    "k0rdentApiVersion": {
      "type": "string",
      "enum": ["v1alpha1", "v1beta1"]
    }
  }
}
